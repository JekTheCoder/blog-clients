---
// import ThemeButton from './ThemeButton.svelte';
import { AuthLinks } from 'auth-ui';
import GlobalSearch from './GlobalSearch.svelte';
---

<header class="py-2 sticky top-0 flex items-center">
	<div class="container mx-auto px-4 layout min-h-10">
		<h1><a href="/">MeBlog</a></h1>

		<GlobalSearch class="invisible w-0 sm:w-full sm:visible" />

		<div class="flex gap-x-4 items-center min-w-28">
			<!-- <ThemeButton client:only /> -->

			<AuthLinks client:only="svelte" />
		</div>
	</div>
</header>

<style>
	header {
		background-color: var(--header-bg-color);
		backdrop-filter: blur(10px);
		z-index: 10;
	}

	.layout {
		display: grid;
		grid-template-columns: auto 1fr auto;
		gap: 4rem;
		place-items: center;
	}

	a {
		text-decoration: underline;
	}
</style>
