{
	"private": true,
	"type": "module",
	"packageManager": "bun@latest",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --concurrency 11",
		"lint": "turbo run lint",
		"format": "prettier --write .",
		"start:admin": "cd apps/admin && bun dev -- --mode production",
		"dev:blog": "cd apps/blog-astro && bun dev"
	},
	"devDependencies": {
		"eslint": "^8.0.0",
		"prettier": "^3.2.5",
		"turbo": "latest",
		"prettier-plugin-astro": "^0.13.0",
		"prettier-plugin-svelte": "^2.10.1"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@astrojs/solid-js": "^4.1.0",
		"solid-js": "^1.8.17"
	}
}
